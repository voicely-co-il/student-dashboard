{
  "crons": [
    {
      "path": "/api/cron/sync",
      "schedule": "0 3 * * *"
    }
  ],
  "rewrites": [
    { "source": "/s/:slug", "destination": "/short/:slug" },
    { "source": "/l/:slug", "destination": "/short/:slug" },
    { "source": "/r/:slug", "destination": "/short/:slug" },
    {
      "source": "/",
      "has": [{ "type": "host", "value": "voicely-student.vercel.app" }],
      "destination": "/student"
    },
    {
      "source": "/",
      "has": [{ "type": "host", "value": "voicely-teacher.vercel.app" }],
      "destination": "/teacher"
    },
    {
      "source": "/",
      "has": [{ "type": "host", "value": "voicely-chat.vercel.app" }],
      "destination": "/student/chat"
    },
    {
      "source": "/",
      "has": [{ "type": "host", "value": "voicely-chatbot.vercel.app" }],
      "destination": "/chat"
    },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ]
}
