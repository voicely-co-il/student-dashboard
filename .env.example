# Supabase (Required)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_PUBLISHABLE_KEY=your-anon-key

# Supabase Service Role (Required for sync script - DO NOT expose to frontend!)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# OpenAI (Required for embeddings)
OPENAI_API_KEY=sk-your-openai-key

# Gemini (Required for Teacher Chat AI - used in Edge Functions)
GEMINI_API_KEY=your-gemini-api-key

# Anthropic (Optional - for AI lesson plans)
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Google OAuth (Required for Google Drive sync)
# Download from Google Cloud Console > APIs & Services > Credentials
# Create OAuth 2.0 Client ID (Desktop App type)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# Notion CRM (Required for Teacher Chat CRM integration)
NOTION_API_KEY=ntn_your-notion-integration-token
NOTION_CRM_DATABASE_ID=your-crm-database-id
NOTION_TASKS_DATABASE_ID=your-tasks-database-id

# ============================================
# UPCOMING INTEGRATIONS (Not yet implemented)
# ============================================

# Cal.com (For booking integration)
# Get from: https://app.cal.com/settings/developer/api-keys
# API v2 - requires cal-api-version: 2024-08-13 header
CALCOM_API_KEY=cal_your-api-key
CALCOM_API_VERSION=2024-08-13
CALCOM_USERNAME=your-username
# Event type IDs for different lesson types
CALCOM_EVENT_TYPE_TRIAL=123  # Trial lesson (30 min)
CALCOM_EVENT_TYPE_PRIVATE=456  # Private lesson (45 min)
CALCOM_EVENT_TYPE_GROUP=789  # Group lesson

# WhatsApp Business API (Cloud API)
# Get from: https://developers.facebook.com/apps/
# Requires verified Meta Business Account
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-waba-id
WHATSAPP_ACCESS_TOKEN=your-permanent-access-token
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token
WHATSAPP_APP_SECRET=your-app-secret-for-webhook-signature

# Whisper API (For voice message transcription)
# Uses OpenAI Whisper API - same key as OPENAI_API_KEY
# WHISPER_MODEL=whisper-1
# WHISPER_LANGUAGE=he

# Soniox (Real-time Hebrew Speech-to-Text for Live Teaching Assistant)
# Get API key from: https://soniox.com/
# Best Hebrew accuracy (7.5% WER), WebSocket streaming, speaker diarization
# Cost: ~$0.12/hour (~22â‚ª/month for Voicely usage)
SONIOX_API_KEY=your-soniox-api-key
